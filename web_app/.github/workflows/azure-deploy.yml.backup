# ============================================================================
# ðŸš€ AZURE CI/CD DEPLOYMENT PIPELINE
# ============================================================================
# This file handles EVERYTHING for Azure deployment automatica    # ðŸ” Step       
    # ðŸ” Step 3: Run Trivy security scanner Login to Azure Container Registry for image scanning
    # âš ï¸ REQUIRES GITHUB SECRETS: ACR_USERNAME and ACR_PASSWORD
    - name: ðŸ” Login to Azure Container Registry
      uses: azure/docker-login@v1
      with:
        login-server: ${{ env.CONTAINER_REGISTRY }}
        username: ${{ secrets.ACR_USERNAME }}        # ðŸ”‘ SECRET: ACR username
        password: ${{ secrets.ACR_PASSWORD }}        # ðŸ”‘ SECRET: ACR passwordou only need to configure GitHub Secrets (see comments below)

name: ðŸš€ Deploy to Azure

# ============================================================================
# ðŸŽ¯ TRIGGERS: When this workflow runs
# ============================================================================
on:
  push:
    branches: [ main ]        # ðŸ”¥ Auto-deploy when you push to main branch
  pull_request:
    branches: [ main ]        # ðŸ§ª Deploy to staging for pull requests
  workflow_dispatch:          # ðŸŽ›ï¸  Manual trigger from GitHub Actions tab

# ============================================================================
# ðŸŒ ENVIRONMENT VARIABLES: Change these to match YOUR Azure setup
# ============================================================================
env:
  # ðŸ“ IMPORTANT: Change these values to match YOUR Azure resources!
  AZURE_WEBAPP_NAME: absrulesextractor          # ðŸŒ Your Azure Web App name
  RESOURCE_GROUP: LeiWang              # ðŸ“ Your Azure Resource Group name  
  CONTAINER_REGISTRY: redtextextractor.azurecr.io     # ðŸ³ Your Azure Container Registry URL
  IMAGE_NAME: abs-rules-extractor                     # ðŸ–¼ï¸  Your Docker image name

# ============================================================================
# ðŸ’¼ CI/CD JOBS: The workflow consists of 6 jobs that run in sequence
# ============================================================================
jobs:
  # ============================================================================
  # ðŸ”¨ JOB 1: BUILD AND TEST
  # ============================================================================
  # Purpose: Install dependencies, run code quality checks, and basic tests
  build-and-test:
    runs-on: ubuntu-latest      # ðŸ–¥ï¸  Runs on GitHub's Ubuntu virtual machine
    name: ðŸ”¨ Build & Test
    
    steps:
    # ðŸ“¥ Step 1: Download your code from GitHub
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4   # âš™ï¸ GitHub Action to download repository
      
    # ðŸ Step 2: Install Python 3.9
    - name: ðŸ Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.9'    # ðŸ Uses Python 3.9 (change if needed)
        
    # ðŸ“¦ Step 3: Install Python dependencies
    - name: ðŸ“¦ Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -r requirements.txt    # ðŸ“‹ Installs from your requirements.txt
        pip install pytest pytest-cov flake8  # ðŸ§ª Adds testing tools
        
    # ðŸ§ª Step 4: Run code quality checks (linting)
    - name: ðŸ§ª Run linting
      run: |
        # ðŸ” Checks for critical errors in app.py
        flake8 app.py --count --select=E9,F63,F7,F82 --show-source --statistics
        # ðŸ” Checks for code style issues (warnings only)
        flake8 app.py --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics
        
    # ðŸ§ª Step 5: Run basic tests
    - name: ðŸ§ª Run tests
      run: |
        # ðŸ§ª Basic test: Check if the Flask app can be imported
        python -c "import app; print('âœ… App imports successfully')"
        # ðŸ“ ADD YOUR OWN TESTS HERE when you have them
        
    # ðŸ“Š Step 6: Upload test coverage (placeholder)
    - name: ðŸ“Š Upload coverage reports
      if: always()    # ðŸ”„ Runs even if previous steps fail
      run: |
        echo "Coverage reports would be uploaded here"
        # ðŸ“ You can add real coverage uploads later

  # ============================================================================
  # ðŸ³ JOB 2: BUILD DOCKER IMAGE
  # ============================================================================
  # Purpose: Create Docker container and push to Azure Container Registry
  build-docker:
    runs-on: ubuntu-latest
    needs: build-and-test        # â³ Waits for build-and-test to complete successfully
    name: ðŸ³ Build Docker Image
    
    steps:
    # ðŸ“¥ Step 1: Download your code again (each job starts fresh)
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    # ðŸ” Step 2: Login to Azure Container Registry
    # âš ï¸ REQUIRES GITHUB SECRETS: ACR_USERNAME and ACR_PASSWORD
    - name: ðŸ” Login to Azure Container Registry
      uses: azure/docker-login@v1
      with:
        login-server: ${{ env.CONTAINER_REGISTRY }}  # ðŸŒ Your ACR URL
        username: ${{ secrets.ACR_USERNAME }}        # ðŸ”‘ SECRET: ACR username
        password: ${{ secrets.ACR_PASSWORD }}        # ðŸ”‘ SECRET: ACR password
    
    # âœ… Step 2.5: Verify login was successful
    - name: âœ… Verify ACR Connection
      run: |
        echo "Testing ACR connection..."
        docker images
        echo "âœ… ACR login successful"
        
    # ðŸ—ï¸ Step 3: Build and push Docker image to Azure Container Registry
    - name: ðŸ—ï¸ Build and push Docker image
      run: |
        # ðŸ”¨ Build Docker image with two tags:
        # - 'latest' tag for the most recent version
        # - Git commit SHA tag for version tracking
        docker build \
          -t ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:latest \
          -t ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }} \
          .
        
        # ðŸš€ Push both images to Azure Container Registry
        docker push ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:latest
        docker push ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}
        
    # ðŸ“ Step 4: Display which image was pushed (for debugging)
    - name: ðŸ“ Image digest
      run: |
        echo "âœ… Image pushed: ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}"

  # ============================================================================
  # ðŸš€ JOB 3: DEPLOY TO PRODUCTION
  # ============================================================================
  # Purpose: Deploy to live Azure Web App (only runs on main branch pushes)
  deploy-production:
    runs-on: ubuntu-latest
    needs: [build-and-test, build-docker]  # â³ Waits for both previous jobs
    name: ðŸš€ Deploy to Production
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'  # ðŸŽ¯ Only on main branch
    environment:
      name: production           # ðŸŒ Production environment
      url: https://${{ env.AZURE_WEBAPP_NAME }}.azurewebsites.net  # ðŸŒ Your live URL
    
    steps:
    # ðŸ“¥ Step 1: Download code
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    # ðŸ” Step 2: Login to Azure with service principal
    # âš ï¸ REQUIRES GITHUB SECRET: AZURE_CREDENTIALS
    - name: ðŸ” Login to Azure
      uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}  # ðŸ”‘ SECRET: Azure service principal JSON
        
    # ðŸš€ Step 3: Deploy new Docker image to Azure Web App
    - name: ðŸš€ Deploy to Azure Web App
      uses: azure/webapps-deploy@v2
      with:
        app-name: ${{ env.AZURE_WEBAPP_NAME }}                              # ðŸŒ Your Web App name
        images: ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}  # ðŸ–¼ï¸ Deploy specific version
        
    # â™»ï¸ Step 4: Restart the Web App to ensure clean deployment
    - name: â™»ï¸ Restart Azure Web App
      run: |
        az webapp restart \
          --name ${{ env.AZURE_WEBAPP_NAME }} \
          --resource-group ${{ env.RESOURCE_GROUP }}
        
    # ðŸ¥ Step 5: Health check to verify deployment success
    - name: ðŸ¥ Health Check
      run: |
        echo "â³ Waiting for deployment to complete..."
        sleep 60    # ðŸ• Wait 1 minute for app to start
        
        # ðŸ©º Try health check up to 10 times
        for i in {1..10}; do
          if curl -f -s https://${{ env.AZURE_WEBAPP_NAME }}.azurewebsites.net/; then
            echo "âœ… Health check passed! App is running."
            exit 0
          else
            echo "âŒ Health check failed, attempt $i/10"
            sleep 30  # ðŸ• Wait 30 seconds before retry
          fi
        done
        echo "ðŸ’€ Health check failed after 10 attempts"
        exit 1

  # ============================================================================
  # ðŸ§ª JOB 4: DEPLOY TO STAGING (FOR PULL REQUESTS)
  # ============================================================================
  # Purpose: Deploy PR changes to staging environment for testing
  deploy-staging:
    runs-on: ubuntu-latest
    needs: [build-and-test, build-docker]  # â³ Waits for both previous jobs
    name: ðŸ§ª Deploy to Staging
    if: github.event_name == 'pull_request'  # ðŸŽ¯ Only runs for pull requests
    environment:
      name: staging              # ðŸ§ª Staging environment
      url: https://${{ env.AZURE_WEBAPP_NAME }}-staging.azurewebsites.net  # ðŸŒ Staging URL
    
    steps:
    # ðŸ“¥ Step 1: Download code
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    # ðŸ” Step 2: Login to Azure
    # âš ï¸ REQUIRES SAME AZURE_CREDENTIALS SECRET
    - name: ðŸ” Login to Azure
      uses: azure/login@v1
      with:
        creds: ${{ secrets.AZURE_CREDENTIALS }}  # ðŸ”‘ SECRET: Same Azure credentials
        
    # ðŸ§ª Step 3: Create and deploy to staging slot
    - name: ðŸ§ª Deploy to Staging Slot
      run: |
        # ðŸ—ï¸ Create staging slot if it doesn't exist
        az webapp deployment slot create \
          --name ${{ env.AZURE_WEBAPP_NAME }} \
          --resource-group ${{ env.RESOURCE_GROUP }} \
          --slot staging \
          --configuration-source ${{ env.AZURE_WEBAPP_NAME }} || echo "Staging slot already exists"
        
        # ðŸš€ Deploy Docker image to staging slot
        az webapp config container set \
          --name ${{ env.AZURE_WEBAPP_NAME }} \
          --resource-group ${{ env.RESOURCE_GROUP }} \
          --slot staging \
          --container-image-name ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}
        
    # ðŸ“ Step 4: Comment on PR with staging URL
    - name: ðŸ“ Comment PR with staging URL
      uses: actions/github-script@v6
      with:
        script: |
          github.rest.issues.createComment({
            issue_number: context.issue.number,
            owner: context.repo.owner,
            repo: context.repo.repo,
            body: 'ðŸ§ª **Staging deployment ready!** \n\nðŸ”— **Preview URL**: https://${{ env.AZURE_WEBAPP_NAME }}-staging.azurewebsites.net\n\nðŸ“Š **Commit**: ${{ github.sha }}'
          })

  # ============================================================================
  # ðŸ”’ JOB 5: SECURITY SCAN
  # ============================================================================
  # Purpose: Scan Docker image for security vulnerabilities
  security-scan:
    runs-on: ubuntu-latest
    needs: build-docker            # â³ Waits for Docker image to be built
    name: ðŸ”’ Security Scan
    if: github.event_name == 'push'  # ðŸŽ¯ Only runs on pushes (not PRs)
    
    steps:
    # ðŸ“¥ Step 1: Download code
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    # ï¿½ Step 2: Login to Azure Container Registry for image scanning
    # âš ï¸ REQUIRES GITHUB SECRETS: RedTextExtractor and Fo/y6FojW7Le2bHB/ap8UXxH41GlGa1PkoqhkzE3Es+ACRBakaZK
    - name: ðŸ” Login to Azure Container Registry
      uses: azure/docker-login@v1
      with:
        login-server: ${{ env.CONTAINER_REGISTRY }}
        username: ${{ RedTextExtractor}}
        password: ${{ Fo/y6FojW7Le2bHB/ap8UXxH41GlGa1PkoqhkzE3Es+ACRBakaZK }}
      
    # ï¿½ðŸ” Step 3: Run Trivy security scanner
    # ðŸ” Step 3: Run Trivy security scanner
    - name: ðŸ” Run Trivy vulnerability scanner
      uses: aquasecurity/trivy-action@master
      with:
        image-ref: ${{ env.CONTAINER_REGISTRY }}/${{ env.IMAGE_NAME }}:${{ github.sha }}  # ðŸ–¼ï¸ Scan the built image
        format: 'sarif'           # ðŸ“‹ Output format for GitHub Security tab
        output: 'trivy-results.sarif'
        
    # ðŸ“Š Step 4: Upload security scan results to GitHub
    - name: ðŸ“Š Upload Trivy scan results
      uses: github/codeql-action/upload-sarif@v2
      if: always()              # ðŸ”„ Upload even if scan finds issues
      with:
        sarif_file: 'trivy-results.sarif'

  # ============================================================================
  # âš¡ JOB 6: PERFORMANCE TEST
  # ============================================================================
  # Purpose: Run load tests to ensure app performance after deployment
  performance-test:
    runs-on: ubuntu-latest
    needs: deploy-production       # â³ Waits for production deployment
    name: âš¡ Performance Test
    if: github.ref == 'refs/heads/main' && github.event_name == 'push'  # ðŸŽ¯ Only after main branch deployment
    
    steps:
    # ðŸ“¥ Step 1: Download code
    - name: ðŸ“¥ Checkout code
      uses: actions/checkout@v4
      
    # âš¡ Step 2: Install k6 and run performance tests
    - name: âš¡ Run performance tests
      run: |
        # ðŸ“¥ Download and install k6 performance testing tool
        curl -s https://github.com/grafana/k6/releases/download/v0.46.0/k6-v0.46.0-linux-amd64.tar.gz | tar xz
        sudo mv k6-v0.46.0-linux-amd64/k6 /usr/local/bin/
        
        # ðŸ“ Create performance test script
        cat > performance-test.js << 'EOF'
        import http from 'k6/http';
        import { check } from 'k6';
        
        export let options = {
          stages: [
            { duration: '1m', target: 5 },   // ðŸ“ˆ Ramp up to 5 users over 1 minute
            { duration: '2m', target: 10 },  // ðŸ”¥ Stay at 10 users for 2 minutes  
            { duration: '1m', target: 0 },   // ðŸ“‰ Ramp down to 0 users over 1 minute
          ],
        };
        
        export default function() {
          let response = http.get('https://${{ env.AZURE_WEBAPP_NAME }}.azurewebsites.net/');
          check(response, {
            'status is 200': (r) => r.status === 200,           // âœ… Check page loads
            'response time < 500ms': (r) => r.timings.duration < 500,  // âš¡ Check speed
          });
        }
        EOF
        
        # ðŸš€ Run the performance test
        k6 run performance-test.js
